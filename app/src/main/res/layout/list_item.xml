<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:orientation="vertical"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewIcon"

            android:layout_width="90dp"
            android:layout_height="60dp"

            android:contentDescription="@string/lamp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@drawable/lamplamp" />

        <TextView
            android:id="@+id/textViewLampID"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/lamp"
            android:textColor="#BF000000"
            android:textSize="20sp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/imageViewIcon"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewLampBrightness"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:text="@string/bright"
            android:textColor="#BF000000"

            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textViewLampID"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_marginEnd="8dp"
            android:id="@+id/OnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/button_onoff_indicator_on" />


        <SeekBar
            android:id="@+id/seekBar"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:max="100"
            android:progress="0"

            android:progressTint="#BF000000"
            android:thumbTint="#BF000000"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>